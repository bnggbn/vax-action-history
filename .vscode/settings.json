{
  // CMake configuration
  "cmake.configureOnOpen": true,
  "cmake.generator": "Ninja",
  "cmake.preferredGenerators": [
    "Ninja",
    "Unix Makefiles"
  ],
  "cmake.buildDirectory": "${workspaceFolder}/c/build",
  "cmake.sourceDirectory": "${workspaceFolder}/c",
  
  // C/C++ configuration
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.compilerPath": "clang",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "C_Cpp.default.cStandard": "c11",
  
  // Clangd configuration (alternative to C/C++ extension)
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/c/build",
    "--header-insertion=never",
    "--clang-tidy",
    "--background-index"
  ],
  
  // Go configuration
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "go.testFlags": ["-v", "-race"],
  "go.coverOnSave": false,
  "go.coverOnTestPackage": true,
  
  // Coverage Gutters (if installed)
  "coverage-gutters.coverageFileNames": [
    "coverage.out",
    "coverage.xml"
  ],
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.showLineCoverage": true,
  
  // Editor settings
  "files.associations": {
    "*.h": "c",
    "vax.h": "c"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  
  // Terminal
  "terminal.integrated.defaultProfile.windows": "PowerShell"
}
